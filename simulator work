                if x == 1:
                    print('Вас отрубило трубой!')
                    money = 0
                    wrk = 0
                    if achivementD == 0:
                        achivementD = 1  
                else:
                    print('Вы заработали 10000')
                    money = money + 10000
                    if achivementFW == 0:
                        achivementFW = 1
            if wrk == 3:
                x = random.randint(0,5)
                if x == 1:
                    print('Вас сбил водитель маршрутки!')
                    money = 0
                    wrk = 0
                    if achivementD == 0:
                        achivementD = 1  
                else:
                    print('Вы заработали 10000')
                    money = money + 10000
                    if achivementFW == 0:
                        achivementFW = 1
        else:
            print('Вы сможете работать, через - ' + str(sorkTime))
