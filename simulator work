def bank():
    global bmoney,money
    print('Ваши деньги в банке:' + str(bmoney))
    bankLevel = int(input('1 положить деньги, 2 - снять, 3 - уйти:'))
    if bankLevel == 1:
        bmon = int(input('Выбирите сумму:'))
        if bmon > money:
            print('Недостаточно средств!')
            bankLevel = 0
        elif bmon <= money:
            print('вы положили деньги в банк!')
            bmoney = bmoney + bmon
            bankLevel = 0
    elif bankLevel == 2:
        bmon = int(input('Выбирите сумму:'))
        if bmon == 0:
            print('У вас нет денег!')
        elif bmon > 0:
            print('Денег:' + str(bmoney))
            if bmon <= bmoney:
                bmoney = bmoney - bmon
                print('Вы сняли:' + str(bmon))
            else:
                print('Введены не верные данные!')
def casino():
    global money,achivementC,achivementL
    print('Вы пришли в казино!')
    pay = int(input('Задайте ставку:'))
    if pay > money:
        print('Недостаточно средств!')
    elif pay < money:
        pp = int(input('На что ставим? 1-крассное,2-черное,3-зеленое:'))
    result = random.randint(0,100)
    if result > 5 and result < 10:
        if pp == 1:
            print('Вы выйграли:' + str(pay))
            if achivementC == 0:
                achivementC = 1
        else:
            print('Вы проиграли!')
            money = money - pay
            if achivementL == 0:
                achivementL = 1
    elif result > 0 and result < 5:
        if pp == 2:
            print('Вы выйграли:' + str(pay))
            if achivementC == 0:
                achivementC = 1
        else:
            print('Вы проиграли!')
            money = money - pay
            if achivementL == 0:
                achivementL = 1
    if result == 10:
        if pp == 3:
            print('Вы выйграли:' + str(pay * 2))
            if achivementC == 0:
                achivementC = 1
        else:
            print('Вы проиграли!')
            money = money - pay
            if achivementL == 0:
                achivementL = 1
    elif achivementC == 1:
        print('Вы получили достижение:"Первый выйгрыш!"')
        achivementC = 2
    if achivementL == 1:
        print('Вы получили достижение:"Первая неудача!"')
        achivementL = 2   
